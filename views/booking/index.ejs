<div class="booking_main">
   
   
   <h1> CONFIRMED BOOKINGS </h1>  
  

   <form class="example search-button" action="/slots" method ="post" style="margin:auto;max-width:300px">
    <input type="text" placeholder="Search.." name="search">
    <button type="submit"><i class="fa fa-search"></i></button>
  </form>

  <div class="add"> 
      <button >
        <a href="bookings/add"> Add new Bookings</a>
        </button></button>
  </div>


  <div class="box-menus">
    <% if (bookings) { %>
        <% bookings.forEach((booking) => { %>

            <div class="menuse">
                 <%= booking.client_name %> 
                <h5><%= booking.phone_number %></h5> 
               
            </div>
           
   <% }) %> 
   <% } %>


</div>
    
</div>

<style>

    .booking_main {
        background-color: rgb(243, 223, 226);
    }
   

    h1 {
        color: black;
        text-align: center;
        font-family: 'Libre Baskerville', serif;
        font-size: 250%;
        margin-bottom: 1%;
    }
    
    h5{
        color:  rgb(7, 0, 0);
        font-size: 180%;
        text-align: center;
       font-weight: 500;
       margin-top: -80%;
       margin-left: -7%;
        
    }
   
    .menuse {
        margin-top: 2%;
        /* height: 150vh; */
        overflow: hidden;
         background-color: rgb(255, 255, 255);
        width: 300px; 
        height: 200px;
        border: 15px solid transparent;
        padding: 50px;
        margin: 30px;
       line-height: 25px;
       box-shadow: 0 4px 6px 0 rgba(0, 0, 0, 0.2), 0 2px 10px 0 rgba(0, 0, 0, 0.19);
        transition: 0.2s ease-in-out; 

    }
    .box-menus{
    display: grid;
    flex-direction: row;
    grid-template-columns: 30% 30% 30%;
    gap: 1em;
}


    .add button{
    background-color: red;
    color: rgb(255, 255, 255);
